<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.GrowDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>>
        <item name="colorPrimaryVariant">@color/darkGray</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:fontFamily">@font/belleza_regular_font</item>
    </style>

    <style name="Theme.GrowDiary" parent="Base.Theme.GrowDiary"/>

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="CardBackground"><item name="android:backgroundTint">@color/almostBlackGray</item></style>
    <style name="PrimaryTitleColor"><item name="android:textColor">@color/white</item></style>
    <style name="PrimaryTextColor"><item name="android:textColor">@color/white</item></style>
    <style name="AddFloatingButtonBackground">
        <item name="android:backgroundTint">@color/primaryLight</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="PhotoFloatingButtonBackground">
        <item name="android:backgroundTint">@color/lightestBlue</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="DividerBackground"><item name="android:background">@color/mediumGray</item></style>
    <style name="ToolbarBackground"><item name="android:background">@color/black</item></style>
    <style name="ToolbarTextAndIcon">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="ItemDays" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/filled_frame_night</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="BoxTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="endIconTint">@color/primary</item>
        <item name="android:textColorHint">@color/LightGray</item>
        <item name="startIconTint">@color/LightGray</item>
    </style>

    <style name="BottomBar">
        <item name="android:background">@color/darkestGray</item>
    </style>

    <style name="dotsStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>



</resources>