<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.GrowDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="android:statusBarColor">@color/primaryLight</item>
        <item name="colorPrimaryContainer">@color/gray</item>
        <item name="android:fontFamily">@font/belleza_regular_font</item>
    </style>

    <style name="Theme.GrowDiary" parent="Base.Theme.GrowDiary"/>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="CardBackground"><item name="android:backgroundTint">#F6F6F6</item></style>
    <style name="PrimaryTitleColor"><item name="android:textColor">@color/darkestGray</item></style>
    <style name="PrimaryTextColor"><item name="android:textColor">@color/darkGray</item></style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/primaryMedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddFloatingButtonBackground">
        <item name="android:backgroundTint">@color/primaryMedium</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="PhotoFloatingButtonBackground">
        <item name="android:backgroundTint">@color/lightestBlue</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="DividerBackground"><item name="android:background">@color/lightGray</item></style>

    <style name="ToolbarBackground"><item name="android:background">@color/primaryLight</item></style>

    <style name="ToolbarTextAndIcon">
        <item name="android:textColor">@color/darkestGray</item>
        <item name="android:drawableTint">@color/darkestGray</item>
    </style>

    <style name="FirstToolbarBackground"><item name="android:background">@color/primaryLight</item></style>

    <style name="ToolbarBackground2"><item name="android:backgroundTint">@color/primaryLight</item></style>

    <style name="SettingsTextAndIcon">
        <item name="android:textColor">@color/darkestGray</item>
        <item name="drawableTint">@color/darkestGray</item>
    </style>

    <style name="ItemDays" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/darkestGray</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/filled_frame_day</item>
        <item name="android:textColorHint">@color/mediumGray</item>
    </style>

    <style name="BoxTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="startIconTint">@color/darkGray</item>
    </style>

    <style name="BottomBar">
        <item name="android:background">@drawable/upper_line_day</item>
    </style>

    <style name="ProStyle">
        <item name="android:tint">@color/darkestGray</item>
        <item name="android:background">@color/proColor</item>
    </style>

    <style name="AddButtonStyle">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>